<UserControl x:Class="Poker.Reward"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid>
        <Canvas>
            <Ellipse x:Name="coin" Fill="Yellow" Stroke="Black" Height="15" Width="15"></Ellipse>
            <Ellipse x:Name="coin2" Fill="Yellow" Stroke="Black" Height="15" Width="15" Canvas.Left="5" Canvas.Top="5"></Ellipse>
            <Ellipse x:Name="coin3" Fill="Yellow" Stroke="Black" Height="15" Width="15" Canvas.Left="10" Canvas.Top="10"></Ellipse>
            <Ellipse x:Name="coin4" Fill="Yellow" Stroke="Black" Height="15" Width="15" Canvas.Left="15" Canvas.Top="15"></Ellipse>
        </Canvas>
    </Grid>
</UserControl>
