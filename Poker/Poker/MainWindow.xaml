<Window x:Class="Poker.MainWindow"
        x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Poker"
        Title="Poker" Height="350" Width="750"
        Background="Green">
    <Grid>
        <Canvas x:Name="mainCanvas">
            <Grid x:Name="startGrid">
            </Grid>
            <Grid x:Name="gridPlayer1" >
                <local:Player x:Name="player1" Margin="0,10,0,-10"></local:Player>
            </Grid>
            <Grid x:Name="gridPlayer2" Canvas.Bottom="0">
                <local:Player x:Name="player2"></local:Player>
            </Grid>
        </Canvas>
        <local:Money x:Name="pot" VerticalAlignment="Center" HorizontalAlignment="Center"></local:Money>
        <Button Click="saveState" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,147,0,146" Width="85" Height="30">Save game</Button>
        <Button Click="loadState" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,182,0,112" Width="85" Height="30">Load game</Button>

        <Grid x:Name="gameNamePopup" Visibility="Hidden" Width="200" Height="80" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0">Enter your game's name:</Label>
            <TextBox Grid.Row="1" Name="stateName"></TextBox>
            <Button Click="stateSaveGame" Content="Save" Grid.Row="2" Width="100" HorizontalAlignment="Left" />
            <Button Click="stateCloseWindow" Content="Close" Grid.Row="2" Width="100" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</Window>
